# IMPORTANT: This is a template. Create your actual secrets from Azure Key Vault
# or manually create this file with real values and apply it.
#
# To create from Key Vault, use the SecretProviderClass (see 03-security-rbac.md)
# Or manually create:
#
# kubectl create secret generic packamal-secrets \
#   --from-literal=POSTGRES_PASSWORD='your-password' \
#   --from-literal=SECRET_KEY='your-secret-key' \
#   --from-literal=INTERNAL_API_TOKEN='your-token' \
#   --namespace packamal

apiVersion: v1
kind: Secret
metadata:
  name: packamal-secrets
  namespace: packamal
type: Opaque
stringData:
  # CHANGE THESE - Use Azure Key Vault in production
  POSTGRES_PASSWORD: "CHANGE_ME"
  SECRET_KEY: "CHANGE_ME"
  INTERNAL_API_TOKEN: "CHANGE_ME"
  AUTH_TOKEN: "CHANGE_ME"

